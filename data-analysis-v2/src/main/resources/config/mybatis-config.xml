<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>

	<!--配置mybatis log4j日志打印sql-->
	<settings><setting name="logImpl" value="LOG4J"/></settings> 

	<typeAliases>
        <typeAlias alias="sysUser" type="com.intellbi.data.dao.dataobject.UserDO"/>
    </typeAliases>
    
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://192.168.81.166:3306/intellbi?useUnicode=true&characterEncoding=UTF-8&autoReconnect=true" />
				<property name="username" value="root" />
				<property name="password" value="root" />
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="sqlmap/userMapper.xml" />
	</mappers>
	
</configuration>
